[Unit]
Description=Set hostname with #-PREDEFINED_HOSTNAME-#
DefaultDependencies=false
Before=local-fs.target

[Service]
Type=oneshot
StandardOutput=journal
StandardError=journal
RemainAfterExit=yes
# FIXME: hardcoded libexec path
ExecStart=/usr/libexec/#-PREDEFINED_HOSTNAME-#-hostname start
ExecStop=/usr/libexec/#-PREDEFINED_HOSTNAME-#-hostname stop

[Install]
WantedBy=systemd-hostnamed.service